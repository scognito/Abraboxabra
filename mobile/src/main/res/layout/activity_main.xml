<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.scognito.abraboxabra.MainActivity" >

    <TextView
        android:id="@+id/tvLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivPushButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:maxLines="30"
        android:scrollbars="vertical"
        android:text="LOG WINDOW" />

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/presence_busy" />

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivStatus"
        android:layout_alignLeft="@+id/ivPushButton"
        android:src="@android:drawable/ic_menu_manage" />

    <ImageView
        android:id="@+id/ivInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_info_details"
        android:layout_alignTop="@+id/tvLog"
        android:layout_alignRight="@+id/tvLog"
        android:layout_alignEnd="@+id/tvLog" />


    <ImageView
        android:id="@+id/ivShutdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:layout_alignStart="@+id/ivPushButton" />

    <ImageView
        android:id="@+id/ivPushButton"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_alignRight="@+id/ivStatus"
        android:layout_centerVertical="true"
        android:src="@drawable/button" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto "
        android:id="@+id/switch1"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>